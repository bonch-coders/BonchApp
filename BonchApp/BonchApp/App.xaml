<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BonchApp.App">
	<Application.Resources>

		<!-- Application resource dictionary -->

        <!--Custom Navigation Bar-->
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="Fonts/RobotoLight.ttf" />
                <Setter Property="FontSize" Value="12" />
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontFamily" Value="Fonts/RobotoLight.ttf" />
                <Setter Property="FontSize" Value="12" />
            </Style>
            <ControlTemplate x:Key="MainPageTemplate">
                <RelativeLayout HeightRequest="50">
                    <Image Aspect="AspectFit" WidthRequest="100"  Source="images/nav_bar.png"/>
                </RelativeLayout>
            </ControlTemplate>
            <Style TargetType="NavigationPage">
                <Setter Property="HasNavigationBar" Value="True" />
                <Setter Property="BarTextColor" Value="White" />
                <Setter Property="BarBackgroundColor" Value="#FF2A3035" />
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>