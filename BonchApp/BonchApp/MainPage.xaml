<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BonchApp"
             x:Class="BonchApp.MainPage"
             BackgroundImage="images/login.png">
    
    <StackLayout Padding="30,20,20,20">
        <Label Margin="0,20,0,-5" HorizontalOptions="Center" FontSize="20" TextColor="White" Text="Вход в систему"></Label>
        <Image WidthRequest="100" HeightRequest="20" Source="images/line.png"></Image>
        <Entry x:Name="Entry1" TextColor="White" WidthRequest="230" HeightRequest="55" HorizontalOptions="Center" FontSize="20" HorizontalTextAlignment="Center" Placeholder="Логин или почта"></Entry>
        <Entry x:Name="Entry2" TextColor="White" Margin="0,5,0,0" WidthRequest="230" HeightRequest="55" HorizontalOptions="Center" FontSize="20" HorizontalTextAlignment="Center" Placeholder="Пароль" IsPassword = "true"></Entry>
        <Button Margin="0,10,0,0" x:Name="Button1" WidthRequest="180" HeightRequest="57" FontSize="18"  HorizontalOptions="Center" Text="Войти"></Button>

    </StackLayout>

</ContentPage>